# CTF Web Agent Configuration
# Copy this file to .env and modify as needed

# Ollama Configuration
CTF_OLLAMA_BASE_URL=http://localhost:11434
CTF_OLLAMA_TEXT_MODEL=llama3.1
CTF_OLLAMA_VISION_MODEL=llava

# Agent Configuration
CTF_MAX_ITERATIONS=30
CTF_TIMEOUT_SECONDS=30

# Browser Configuration
CTF_HEADLESS=false
CTF_SLOW_MO=100
CTF_VIEWPORT_WIDTH=1280
CTF_VIEWPORT_HEIGHT=720

# Human-in-the-Loop
CTF_HITL_ENABLED=true
